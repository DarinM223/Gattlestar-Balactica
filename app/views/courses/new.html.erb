<div class="container">
  <%= form_for @new_course, url: create_course_path, method: :post, html: {class: "form-horizontal"} do |f| %>
    <legend>Create New Course</legend>
    <div class="field form-group">
      <%= f.label :department, "Department:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_field :department, class: "form-control" %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :course_id, "Course ID:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_field :course_id, class: "form-control" %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :professor_last_name, "Professor Last Name:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_field :professor_last_name, class: "form-control" %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :professor_first_name, "Professor First Name:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_field :professor_first_name, class: "form-control" %>
      </span>
    </div>
    <div class="actions form-group">
      <div class="col-lg-10 col-lg-offset-1">
        <%= f.submit "Create Course", class: "btn btn-primary" %>
      </div>
    </div>
   
  <% end %>
</div>
