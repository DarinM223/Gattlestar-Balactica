<div class="container" style="position: absolute;
  top: 50%;
  margin-top: -200px;
  left: 0;
  width: 100%;">
  <div class="panel panel-default text-center" style="margin-left: auto;
  margin-right: auto;
  max-height: 400px;
  max-width: 60%;">
    <div class="panel-heading"><h2>Search for a course to add to profile:</h2></div>
    <div class="panel-body">
      <%= form_tag add_course_taken_post_path do %>
        <div class="form-group">
          <%= text_field_tag 'dep_name', nil, placeholder: 'Department Name', class: 'form-control', autofocus: true %>
          <%= text_field_tag 'crse_name', nil, placeholder: 'Course ID (Optional)', class: 'form-control' %>
        </div>
        <button type="submit" class="btn btn-default">Add Course</button>
      <% end %>
    </div>
  </div>
</div>
