<div class="container">
  <%= form_for @doc, url: create_document_path(course_id: @course_id), method: :post, html: {class: "form-horizontal"} do |f| %>
    <legend>Upload document</legend>
    <div class="field form-group">
      <%= f.label :quarter, "Quarter:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.select :quarter, options_for_select(@quarters), {}, { class: "form-control" } %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :year, "Year:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.select :year, options_for_select(@years), {}, { class: "form-control" } %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :description, "Description:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_area :description, class: "form-control" %>
      </span>
    </div>
    <div class="field form-group">
      <span class="col-lg-10 col-lg-offset-1">
        <%= f.file_field :document %>
      </span>
    </div>

    <div class="actions form-group">
      <div class="col-lg-10 col-lg-offset-1">
        <%= f.submit "Upload Document", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
