<div class="container">
  <%= form_for @doc, url: documents_path, method: :post, html: {class: "form-horizontal"} do |f| %>
    <legend>Upload document</legend>
    <div class="field form-group">
      <%= f.label :quarter_year, "Quarter Year:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.select :quarter_year, options_for_select(@quarters), {}, { class: "form-control" } %>
      </span>
    </div>
    <div class="field form-group">
      <%= f.label :description, "Description:", class: "col-lg-1 control-label" %>
      <span class="col-lg-10">
        <%= f.text_area :description, class: "form-control" %>
      </span>
    </div>
    <div class="field form-group">
      <span class="col-lg-10 col-lg-offset-1">
        <%= f.file_field :document %>
      </span>
    </div>

    <div class="actions form-group">
      <div class="col-lg-10 col-lg-offset-1">
        <%= f.submit "Upload Document", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
