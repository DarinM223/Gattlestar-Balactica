<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>Document Preview</h2>
    </div>
  </div>

  <div>
    <% if @has_thumbnail %>
      <%= image_tag @doc.document.thumb.url %>
    <% else %>
      <p>There is no thumbnail for the specified image</p>
    <% end %>
  </div>

  <div style="text-align: center;">
    <% if @can_download %>
      <%= link_to 'Get uploaded PDF', @doc.document.url, class: 'btn btn-info' %>
    <% else %>
      <p>Can't download!</p>
    <% end %>
  </div>

</div>
