<% if !user_signed_in? || (user_signed_in? && !current_page?(controller: "homepage", action: "search_test")) %>
  <%= form_tag search_path, :class => "navbar-form navbar-right", :role => 'search' do %>
  	<div class="form-group">
  		<%= text_field_tag 'dpm_name', nil, placeholder: 'Department Name', class: 'form-control', autofocus: true %>
  		<%= text_field_tag 'course_name', nil, placeholder: 'Course ID (Optional)', class: 'form-control' %>
  	</div>
  	<button type="submit" class="btn btn-default">Search</button>
  <% end %>
<% else %>
  <%= form_tag search_path, :class => "form-horizontal", :role => 'search' do %>
    <fieldset>
  	  <span class="field form-group">
        <span class="col-lg-10">
  	  	  <%= text_field_tag 'dpm_name', nil, placeholder: 'Department Name', class: 'form-control', autofocus: true %>
        </span>
      </span>
      <span class="field form-group">
        <span class="col-lg-10">
  	  	  <%= text_field_tag 'course_name', nil, placeholder: 'Course ID (Optional)', class: 'form-control' %>
        </span>
  	  </span>
      <span class="field form-group">
        <span class="col-lg-10">
  	      <button type="submit" class="btn btn-default">Search</button>
        </span>
      </span>
    </fieldset>
  <% end %>
<% end %>


